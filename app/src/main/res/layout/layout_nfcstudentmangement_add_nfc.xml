<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签UID"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nfc_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g.0C123..."
                android:selectAllOnFocus="true" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称定义："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nfc_define"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nfcstudentmangement_add_nfc_register_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:tag="custom_login_button"
                android:text="录入NFC"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/nfcstudentmangement_add_nfc_cannel_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:tag="custom_signup_button"
                android:text="取消"
                android:textColor="@color/white" />

        </LinearLayout>
    </TableLayout>
</LinearLayout>