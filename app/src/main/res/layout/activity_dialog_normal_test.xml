<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_normal_button_test_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="dialog1"
            android:tag="custom_login_button"
            android:text="@string/login"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialog_normal_button_test_2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="dialog2"
            android:tag="custom_signup_button"
            android:text="@string/logout"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialog_normal_button_test_3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="dialog3"
            android:tag="custom_signup_button"
            android:text="@string/logout"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>